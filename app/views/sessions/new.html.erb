<%= render 'shared/page_title', title: "Log in" %>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path)  do |f| %> <!-- This is how you add bootstrap class in ruby code -->
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= f.label :email %>
       </div>
     <div class="col-md-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your e-mail address.." %>
      </div>
     </div>
     
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= f.label :password %>
       </div>
     <div class="col-md-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
     </div>
     
     <div class="form-group">
       <div class="col-md-offset-2 col-md-10 ">
         <%= f.submit "Log in" , class: "btn btn-primary btn-lg nice_green"  %>
       </div>
     </div>
    <% end %>